@model IEnumerable<TaskBoard.Models.ProxyGroup>

@{
    ViewData["Title"] = "Proxy Groups";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proxies)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="3">No groups have been created yet. To create a new group, add a name during the importing process in <a asp-controller="Home" asp-action="ProxyManager">Proxy Manager</a></td></tr>
    }
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proxies.Count)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
